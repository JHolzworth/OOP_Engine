package letters;
import java.awt.Point;


public class LetterPoint {
	
	public static Point[] getV(){
		Point[] points = new Point[3];
		points[0] = new Point(-1,-1);
		points[1] = new Point(0,1);
		points[2] = new Point(1,-1);
		return points;
	}
	
	public static Point[] getO(){
		Point[] points = new Point[12];
		points[0] = new Point(0,-3);
		points[1] = new Point(1,-2);
		points[2] = new Point(2,-1);
		points[3] = new Point(2,1);
		points[4] = new Point(1,2);
		points[5] = new Point(0,3);
		
		points[6] = new Point(-1,3);
		points[7] = new Point(-1,2);
		points[8] = new Point(-2,1);
		points[9] = new Point(-2,-1);
		points[10] = new Point(-1,-2);
		points[11] = new Point(-1,-3);
		return points;
	}
}
